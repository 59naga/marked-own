@import './font'
@import './color'
@import './mixin'

meyer-reset()
html
body
  height 100%

// display, margin, padding, width, height ...
// and transition
.immaterial-design
  margin 0
  min-height 100%
  
  // positions
  h1,h2,h3,h4,h5,h6
    padding .5em 0
  
  hr
    opacity .5
    margin 1.5em 2em
    border none
    border-top dashed 2px
  
  > .container a
  > footer a
    pointer()
  
  > header
  > footer
    text-align center
  
  > header
    font-size 500%
    height 2em
    
    pixelated()

    background-attachment fixed
    background-position top center
    background-repeat no-repeat
    background-size contain

    h2
      font-size inherit
      overflow ellipsis
      width 100%
      a
        border-bottom .1em solid
        
        color white
        text-decoration none
        
        transition border-color 1s
        border-color alpha(white,0)
        &:hover
          border-color alpha(white,1)
    
  > .container
    padding 0
    
    display flex
    > *
      margin 1em
      
    > article
      flex 2
      margin-right 0
      
      section
        padding .5em 1em
        
      p
        padding .5em
        
      ul
        ul
          padding-left 1em
        
        li:before
          content: 'ãƒ»'

    > nav
      flex 1
      max-width 8em
      
      img
        width 100%
      
      section
        margin-bottom .5em
  
  > footer
    padding 0
    padding 1em
  